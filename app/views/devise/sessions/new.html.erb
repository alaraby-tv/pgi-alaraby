<%= form_for(resource, as: resource_name, url: new_user_session_path, html: { role: 'form', class: "form-signin" }) do |f| %>
  <h2 class="form form-signin-heading">Please sign in</h2>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email address", class: 'form-control' %>
  
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: 'off', autofocus: true, required: true, placeholder: "Password", class: 'form-control' %>
  
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
      <% end %>
    </div>
  <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary btn-lg btn-block' %>
  <%= render 'devise/shared/links' %> 
<% end %>
    
