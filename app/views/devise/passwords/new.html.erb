<%= bootstrap_devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form", class: "form form-signin" }) do |f| %>
  <h2><%= t('.forgot_your_password', default: 'Forgot your password?') %></h2>
  
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email address", class: 'form-control' %>
  </div>
  
  <%= f.submit t('.send_me_reset_password_instructions', default: 'Send me reset password instructions'), class: 'btn btn-primary btn-lg btn-block' %>
  <%= render 'devise/shared/links' %>
<% end %>
    
    