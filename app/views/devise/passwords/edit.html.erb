<%= bootstrap_devise_error_messages! %>

    <h2><%= t('.change_your_password', default: 'Change your password') %></h2>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form', class: "form form-signin" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autofocus: true, required: true, placeholder: "New Password", class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password_confirmation, required: true, placeholder: " Confirm New Password", class: 'form-control'  %>
      </div>

      <%= f.submit t('.change_my_password', default: 'Change my password'), class: 'btn btn-primary' %>
    <% end %>
<%= render 'devise/shared/links' %>
