<tr class="nested-fields">
  <td>
    <%= f.text_field :name, placeholder: "Presenter's name", data: { autocomplete_source: Presenter.order(:name).map(&:name) }, class: 'form-control presenter-field' %>
  </td>
  <td>
    <%= link_to_remove_association f, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-trash"></span>
      Remove
    <% end %> 
  </td>   
</tr> 
