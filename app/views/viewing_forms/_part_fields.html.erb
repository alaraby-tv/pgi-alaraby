<div class="nested-fields">
  <div class="col-md-4 first-field">
    <%= f.label :in %>
    <%= f.text_field :in, onchange: "valueOfFirstField(this);", required: true, placeholder: 'HH:MM:SS:FF', class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <%= f.label :out %>
    <%= f.text_field :out, onchange: "valueOfSecondField(this);", required: true, placeholder: 'HH:MM:SS:FF', class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <%= f.label :duration %>
    <%= f.text_field :duration, readonly: true, placeholder: 'HH:MM:SS:FF', class: 'form-control duration' %>
  </div>
  <div class="col-md-6">
    <%= f.label :note %>
    <%= f.text_area :note, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <%= link_to_remove_association "Remove Part", f, class: 'btn btn-danger btn-remove-part' do %>
      <span class="glyphicon glyphicon-trash"></span>
      Remove
    <% end %>
  </div>
</div>